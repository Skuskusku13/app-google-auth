{% extends 'base.html.twig' %}

{% block title %}Mon Espace{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            
            <div class="card card-custom text-center pt-5 pb-4 px-4 mt-5">
                <div class="d-flex justify-content-center">
                    {% if app.user.avatar %}
                        <img src="{{ app.user.avatar }}" alt="Avatar" class="avatar-profile">
                    {% else %}
                        <div class="avatar-profile d-flex align-items-center justify-content-center text-primary fs-1">
                            <i class="bi bi-person-circle"></i>
                        </div>
                    {% endif %}
                </div>
                
                <div class="card-body mt-3">
                    {# Affichage Nom Prénom #}
                    <h2 class="fw-bold mb-1">Bienvenue {{ app.user.name }}</h2>
                    <p class="text-muted mb-4"><i class="bi bi-envelope-at me-2"></i>{{ app.user.email }}</p>

                    <div class="alert alert-success bg-opacity-10 border-0" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> Vous êtes connecté avec succès.
                    </div>

                    <hr class="my-4">

                    <h4 class="mb-3 text-start"><i class="bi bi-file-earmark-plus me-2"></i>Créer un Google Doc</h4>
                    <form action="{{ path('docs_create') }}" method="post" class="text-start">
                        <div class="mb-3">
                            <label for="docTitle" class="form-label visually-hidden">Titre du document</label>
                            <input type="text" class="form-control" id="docTitle" name="title" placeholder="Titre du document" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-plus-lg me-2"></i>Créer le document
                        </button>
                    </form>

                    <div class="mt-4 border-top pt-4">
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger btn-logout w-100">
                            <i class="bi bi-box-arrow-right me-2"></i>Se déconnecter
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
