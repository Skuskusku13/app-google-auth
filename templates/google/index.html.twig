{% block stylesheets %}
    <style>
        .google-btn {
            display: inline-flex;
            align-items: center;
            background: white;
            border: 1px solid #dadce0;
            border-radius: 4px;
            padding: 0 12px;
            cursor: pointer;
            font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
            font-size: 14px;
            font-weight: 500;
            height: 40px;
            gap: 12px;
            transition: background-color 0.218s, border-color 0.218s, box-shadow 0.218s;
            box-shadow: 0 1px 2px 0 rgba(60, 64, 67, 0.3), 0 1px 3px 1px rgba(60, 64, 67, 0.15);
        }

        .google-btn:hover {
            background: #f8f9fa;
            border-color: #dadce0;
            box-shadow: 0 1px 3px 0 rgba(60, 64, 67, 0.3), 0 4px 8px 3px rgba(60, 64, 67, 0.15);
        }

        .google-btn:active {
            background: #f1f3f4;
            box-shadow: 0 1px 2px 0 rgba(60, 64, 67, 0.3);
        }

        .google-btn:focus {
            outline: none;
            border-color: #4285f4;
        }

        .google-icon {
            width: 18px;
            height: 18px;
            flex-shrink: 0;
        }

        .google-btn-text {
            color: #3c4043;
            white-space: nowrap;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        function openGooglePopup() {
            const url = '{{ path('connect_google') }}';
            const width = 500;
            const height = 650;
            const left = (screen.width / 2) - (width / 2);
            const top = (screen.height / 2) - (height / 2);

            const popup = window.open(
                url,
                'GoogleAuth',
                `width=${width},height=${height},top=${top},left=${left},toolbar=0,menubar=0,location=0,scrollbars=1,resizable=1`
            );

            if (!popup) {
                alert('Popup bloquÃ©e ! Autorisez les popups.');
                window.location.href = url;
                return;
            }

            const timer = setInterval(() => {
                if (popup.closed) {
                    clearInterval(timer);
                    window.location.reload();
                }
            }, 500);
        }
    </script>
{% endblock %}
